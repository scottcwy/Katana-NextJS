# Katana-NextJS Environment Variables Example
# 复制此文件到 .env.local 并填入您的实际值

# -----------------------------------------------------------------------------
# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL="https://example.com"
NEXT_PUBLIC_PROJECT_NAME="AI Wallpaper"

# -----------------------------------------------------------------------------
# Database with Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL="your_supabase_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# -----------------------------------------------------------------------------
# Auth Configuration
# -----------------------------------------------------------------------------
AUTH_SECRET="your_auth_secret_key"

# Google Auth
AUTH_GOOGLE_ID="your_google_client_id"
AUTH_GOOGLE_SECRET="your_google_client_secret"
NEXT_PUBLIC_AUTH_GOOGLE_ID="your_google_client_id"
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED="false"
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED="false"

# Github Auth
AUTH_GITHUB_ID="your_github_client_id"
AUTH_GITHUB_SECRET="your_github_client_secret"
NEXT_PUBLIC_AUTH_GITHUB_ENABLED="true"

# -----------------------------------------------------------------------------
# Analytics Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="your_ga_id"
NEXT_PUBLIC_OPENPANEL_CLIENT_ID="your_openpanel_id"

# -----------------------------------------------------------------------------
# Payment Configuration (Stripe)
# -----------------------------------------------------------------------------
STRIPE_PUBLIC_KEY="your_stripe_public_key"
STRIPE_PRIVATE_KEY="your_stripe_private_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

NEXT_PUBLIC_PAY_SUCCESS_URL="https://example.com/my-orders"
NEXT_PUBLIC_PAY_FAIL_URL="https://example.com/#pricing"
NEXT_PUBLIC_PAY_CANCEL_URL="https://example.com/#pricing"

# -----------------------------------------------------------------------------
# Locale and Theme
# -----------------------------------------------------------------------------
NEXT_PUBLIC_LOCALE_DETECTION="false"
NEXT_PUBLIC_DEFAULT_THEME="dark"

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
ADMIN_EMAILS="admin@example.com"

# -----------------------------------------------------------------------------
# Storage Configuration (AWS S3)
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT="your_s3_endpoint"
STORAGE_REGION="your_s3_region"
STORAGE_ACCESS_KEY="your_s3_access_key"
STORAGE_SECRET_KEY="your_s3_secret_key"
STORAGE_BUCKET="your_s3_bucket"
STORAGE_DOMAIN="your_s3_domain"

# -----------------------------------------------------------------------------
# Flux Configuration
# -----------------------------------------------------------------------------
FLUX_API_KEY="your_flux_api_key"

# -----------------------------------------------------------------------------
# Credit System Configuration
# -----------------------------------------------------------------------------
# Set to 'true' to enable credit check, 'false' to disable (default is 'false')
ENABLE_CREDIT_CHECK="false"
